<h1>Employees and their Associated Lockers</h1>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
            <th>Employee ID</th>
            <th>Employee Name</th>
            <th>Locker ID</th>
            <th>Locker Name</th>
            </tr>
        </thead>
        <tbody>
            <% @employees.each do |employee| %>
